<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/background_shape_border_white_corners">

        <Spinner
            android:id="@+id/frequencyTypeSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_8"
            android:backgroundTint="@color/gray_light" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/monthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/background_shape_border_white_corners"
        android:orientation="vertical">

        <com.views.TextViewRegular
            android:id="@+id/monthTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_4"
            android:padding="@dimen/dp_4"
            android:text="@string/select_month"
            android:textAlignment="viewStart"
            android:textColor="@color/hint_gray" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:contentDescription="@string/day"
            android:src="@drawable/ic_calendar_primary" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dayLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/background_shape_border_white_corners"
        android:orientation="vertical">

        <com.views.TextViewRegular
            android:id="@+id/dayTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_4"
            android:padding="@dimen/dp_4"
            android:text="@string/select_day_of_week"
            android:textAlignment="viewStart"
            android:textColor="@color/hint_gray" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:contentDescription="@string/day"
            android:src="@drawable/ic_calendar_primary" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dayMonthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/background_shape_border_white_corners"
        android:orientation="vertical">

        <com.views.TextViewRegular
            android:id="@+id/dayMonthTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_4"
            android:padding="@dimen/dp_4"
            android:text="@string/select_day_of_month"
            android:textAlignment="viewStart"
            android:textColor="@color/hint_gray" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:contentDescription="@string/day"
            android:src="@drawable/ic_calendar_primary" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/quarterLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/background_shape_border_white_corners">

        <Spinner
            android:id="@+id/quarterSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_8"
            android:backgroundTint="@color/gray_light" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/halfLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/background_shape_border_white_corners">

        <Spinner
            android:id="@+id/halfSpinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_8"
            android:backgroundTint="@color/gray_light" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/hourLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/background_shape_border_white_corners"
        android:orientation="vertical">

        <com.views.TextViewRegular
            android:id="@+id/hourTextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_4"
            android:padding="@dimen/dp_4"
            android:text="@string/select_hour"
            android:textAlignment="viewStart"
            android:textColor="@color/hint_gray" />

        <ImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_16"
            android:contentDescription="@string/hour"
            android:src="@drawable/ic_clock_primary" />
    </RelativeLayout>

</LinearLayout>