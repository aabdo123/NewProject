<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login__newbg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.views.TextViewRegular
            style="@style/mediumWhiteText"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:text="@string/about_us_title_1"
            android:textAlignment="center" />

        <com.views.TextViewRegular
            style="@style/smallWhiteText"
            android:layout_margin="@dimen/dp_8"
            android:maxLines="7"
            android:text="@string/about_us_des_1"
            android:textAlignment="viewStart" />

        <com.views.TextViewRegular
            style="@style/mediumWhiteText"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_8"
            android:text="@string/about_us_title_2"
            android:textAlignment="viewStart" />

        <com.views.TextViewRegular
            style="@style/smallWhiteText"
            android:layout_margin="@dimen/dp_8"
            android:maxLines="30"
            android:text="@string/about_us_des_2"
            android:textAlignment="viewStart" />


        <com.views.TextViewRegular
            android:id="@+id/webSiteTextView"
            style="@style/largeWhiteText"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_margin="@dimen/dp_16"
            android:gravity="bottom"
            android:text="@string/saferoad_website"
            android:textAlignment="center" />

    </LinearLayout>
</ScrollView>